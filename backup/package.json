{
  "name": "live-polling-system",
  "version": "1.0.0",
  "description": "A real-time polling application with React frontend and Express.js backend",
  "main": "index.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm start",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "start": "cd backend && npm start"
  },
  "keywords": [
    "polling",
    "real-time",
    "react",
    "express",
    "socket.io",
    "education",
    "interactive"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/live-polling-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/live-polling-system/issues"
  },
  "homepage": "https://github.com/yourusername/live-polling-system#readme"
}
